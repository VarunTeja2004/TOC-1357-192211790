#include <stdio.h>
#include <string.h>
int belongsToA(const char *str, int *index) {
   
    if (*index >= strlen(str)) {
        return 1; // ε is valid
    }

   
    if (str[*index] == '1') {
        (*index)++; 
        return belongsToA(str, index); 
    }

    return 0; 
}
int belongsToS(const char *str, int *index) {
   
    if (str[*index] == '0') {
        (*index)++; 
        if (belongsToS(str, index) && str[*index] == '0') {
            (*index)++;
            return 1; 
        }
        return 0; 
    }
    
    return belongsToA(str, index);
}

int main() {
    char input[100];

    printf("Enter a string to check if it belongs to the CFG (S → 0S0 | A, A → 1A | ε): ");
    scanf("%s", input);

    int index = 0; 
    if (belongsToS(input, &index) && index == strlen(input)) {
        printf("The string '%s' belongs to the language defined by the CFG.\n", input);
    } else {
        printf("The string '%s' does not belong to the language defined by the CFG.\n", input);
    }

    return 0;
}
