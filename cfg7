#include <stdio.h>
#include <string.h>

int isValidA(const char *str, int *index) {

    while (str[*index] == '0' || str[*index] == '1') {
        (*index)++; 
    }
    return 1; 
}

int belongsToCFG(const char *str) {
    int length = strlen(str);
    int index = 0;

    
    if (length < 5) {
        return 0; 
    }


    isValidA(str, &index);

 
    if (index + 2 >= length || str[index] != '1' || str[index + 1] != '0' || str[index + 2] != '1') {
        return 0; 
    }
    index += 3; 

   
    return isValidA(str, &index) && index == length; 
}

int main() {
    char input[100];

    printf("Enter a string to check if it belongs to the CFG (S → A101A, A → 0A | 1A | ε): ");
    scanf("%s", input);

    if (belongsToCFG(input)) {
        printf("The string '%s' belongs to the language defined by the CFG.\n", input);
    } else {
        printf("The string '%s' does not belong to the language defined by the CFG.\n", input);
    }

    return 0;
}
