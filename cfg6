#include <stdio.h>
#include <string.h>
int belongsToCFG(const char *str) {
    int count0 = 0, count1 = 0;
    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == '0') {
            count0++;
        } else if (str[i] == '1') {
            count1++;
        } else {
            return 0; 
        }
    }
    return count0 == count1;
}
int main() {
    char input[100];

    printf("Enter a string to check if it belongs to the CFG (S → 0S1 | ε): ");
    scanf("%s", input);
    if (belongsToCFG(input)) {
        printf("The string '%s' belongs to the language defined by the CFG.\n", input);
    } else {
        printf("The string '%s' does not belong to the language defined by the CFG.\n", input);
    }

    return 0;
}
