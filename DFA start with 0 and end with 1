#include <stdio.h>
#include <string.h>
#include <stdbool.h> 

bool isAcceptedDFA(char *input) {
    int state = 0;  
    for (int i = 0; i < strlen(input); i++) {
        char c = input[i];

        switch (state) {
            case 0: 
                if (c == '0') {
                    state = 1; 
                } else {
                    state = 3; 
                }
                break;
            case 1: 
                if (c == '0') {
                    state = 1; 
                } else if (c == '1') {
                    state = 2; 
                } else {
                    state = 3;
                }
                break;
            case 2: 
                if (c == '0') {
                    state = 1;
                } else if (c == '1') {
                    state = 2; 
                } else {
                    state = 3; 
                }
                break;
            case 3: 
                return false; 
        }
    }
    return (state == 2); 
}

int main() {
    char input[100];
    printf("Enter a binary string: ");
    scanf("%s", input);
    for (int i = 0; i < strlen(input); i++) {
        if (input[i] != '0' && input[i] != '1') {
            printf("Invalid input. Only binary strings (0s and 1s) are allowed.\n");
            return 1;
        }
    }
    if (isAcceptedDFA(input)) {
        printf("The string is accepted by the DFA.\n");
    } else {
        printf("The string is rejected by the DFA.\n");
    }

    return 0;
}
