#include <stdio.h>
#include <string.h>
#include <stdbool.h>


bool belongsToCFG(const char* str) {
    int len = strlen(str);

    if (len == 0) {
        return true;
    }

    if (str[0] == '0' && str[len - 1] == '0') {
  
        int mid_count = 0;
        for (int i = 1; i < len - 1; i++) {
            if (str[i] == '0') {
                return false; 
            }
            if (str[i] == '1') {
                mid_count++;
            }
        }
       
        return mid_count > 0 || len == 2; 
    }

   
    for (int i = 0; i < len; i++) {
        if (str[i] != '1') {
            return false; 
        }
    }
    return true; 
}

int main() {
    char str[100];

    printf("Enter a string to check: ");
    scanf("%s", str);

    if (belongsToCFG(str)) {
        printf("The string belongs to the language defined by the CFG.\n");
    } else {
        printf("The string does NOT belong to the language defined by the CFG.\n");
    }

    return 0;
}
